<script type="text/javascript">
  <% tip_content = "<div class=\"calendar_hover\"><div class=\"title_bar\"><h2 class=\"on\" lang=\"en\">Pre order</h2></div>#{product.description}</div>"
  -%>
  $(function() {
    $("#<%= product.id -%>").qtip({
      content: '<%= tip_content -%>',
      style: {
        padding: 0,
        width: <%= 300 -%> + 2,
        border: {
          width: 0
          //color: '#575757',
          //radius: 1
        }
      },
      position: {
        target: 'mouse',
        adjust: {
          mouse: true,
          screen: true,
          x: 30,
          y: 0
        }
      }
    });
  });
</script>